<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="timeline_view_form" model="ir.ui.view">
            <field name="name">timeline.report.wizard.form</field>
            <field name="model">timeline.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Timeline Report">
                    <group>
                        <group>
                        	<field name="mrp_order_id" required="True" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_timeline_report_xlsx" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_timeline_report" model="ir.actions.act_window">
            <field name="name">Timeline Report</field>
            <field name="res_model">timeline.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_timeline_report"
            action="action_timeline_report"
            parent="mrp.menu_mrp_reporting"
            sequence="57"
        />
    </data>
</odoo>