<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="custom_sale_report_wizard_view_form" model="ir.ui.view">
            <field name="name">mrp.cost.sale.report.wizard.form</field>
            <field name="model">mrp.cost.sale.report.wizard</field>
            <field name="arch" type="xml">
                <form string="MRP Cost Sale Report">
                    <group>
                        <group>
                            <field name="order_type" widget="radio" options="{'horizontal': true}" required="True"/>
                            <field name="mrp_order_id" 
                            attrs="{'invisible':[('order_type','!=','single_order')],'required':[('order_type','=','single_order')]}"/>
                        </group>
                        <group >
                        	<field name="start_at" attrs="{'invisible':[('order_type','=','single_order')],'required':[('order_type','!=','single_order')]}"/>
                            <field name="stop_at" attrs="{'invisible':[('order_type','=','single_order')],'required':[('order_type','!=','single_order')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_mrp_cost_sales_xlsx" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_mrp_cost_sale_report" model="ir.actions.act_window">
            <field name="name">MRP Cost Sale Report</field>
            <field name="res_model">mrp.cost.sale.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_mrp_cost_sale_report"
            action="action_mrp_cost_sale_report"
            parent="mrp.menu_mrp_reporting"
            sequence="55"
        />
    </data>
</odoo>