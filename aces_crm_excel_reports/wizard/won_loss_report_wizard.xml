<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="won_loss_wizard_view_form" model="ir.ui.view">
            <field name="name">won.loss.wizard.form</field>
            <field name="model">won.loss.wizard</field>
            <field name="arch" type="xml">
                <form string="Won Loss Report">
                    <group>
                        <group >
                        	<field name="start_at"/>
                            <field name="stop_at"/>
                        </group>
                        <group >
                            <field name="status" />
                            <field name="user_id" />
                        </group>
                    </group>
                    <footer>
                        <button name="print_won_loss_xlsx" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_won_loss_report" model="ir.actions.act_window">
            <field name="name">Won Loss Report</field>
            <field name="res_model">won.loss.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_won_loss_report"
            action="action_won_loss_report"
            parent="crm.crm_menu_report"
            sequence="52"
        />
    </data>
</odoo>