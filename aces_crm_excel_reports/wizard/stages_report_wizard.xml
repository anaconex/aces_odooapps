<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="crm_stage_report_wizard_view_form" model="ir.ui.view">
            <field name="name">crm.stages.report.wizard.form</field>
            <field name="model">crm.stages.report.wizard</field>
            <field name="arch" type="xml">
                <form string="CRM Stage Report">
                    <group>
                        <group >
                        	<field name="start_at"/>
                            <field name="stop_at"/>
                        </group>
                        <group >
                        	<field name="user_id"/>
                            <field name="stage_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_crm_stage_xlsx" type="object" string="Print XLS" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_crm_stage_report" model="ir.actions.act_window">
            <field name="name">CRM Stage Report</field>
            <field name="res_model">crm.stages.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_crm_stage_report"
            action="action_crm_stage_report"
            parent="crm.crm_menu_report"
            sequence="55"
        />
    </data>
</odoo>