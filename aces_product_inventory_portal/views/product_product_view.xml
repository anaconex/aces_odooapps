<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_product_form_view_inherit" model="ir.ui.view">
		<field name="name">product.product.form</field>
	    <field name="model">product.product</field>
	    <field name="inherit_id" ref="product.product_normal_form_view"/>        
	    <field name="arch" type="xml">
			
			<xpath expr="//header" position="inside">
				<button name='action_discountinued' string="Discountined" type="object" class="btn_danger" attrs="{'invisible':[('is_discountinued','=',True)]}"/>
				<button name='action_countinued' string="Countined" type="object" class="btn_danger" attrs="{'invisible':[('is_discountinued','=',False)]}"/>
			</xpath>
			
			
			<xpath expr="//sheet" position="before">
				<div align="center" class="btn-danger" attrs="{'invisible': [('is_discountinued','=',False)]}">
					<h3>
						<p>Discontinued</p>
					</h3>
				</div>
            </xpath>
			
			<xpath expr="//field[@name='categ_id']" position="after">
				<field name="expected_date_receving" />
				<field name="is_discountinued" />
				<field name="all_lot_ids" />
			</xpath>
			
		</field>		
   </record>
   
   
   
   <record id="product_template_form_view_inherit" model="ir.ui.view">
		<field name="name">product.template.form</field>
	    <field name="model">product.template</field>
	    <field name="inherit_id" ref="product.product_template_only_form_view"/>        
	    <field name="arch" type="xml">
			
			<xpath expr="//header" position="inside">
				<button name='action_discountinued' string="Discountined" type="object" class="btn_danger" attrs="{'invisible':[('is_discountinued','=',True)]}"/>
				<button name='action_countinued' string="Countined" type="object" class="btn_danger" attrs="{'invisible':[('is_discountinued','=',False)]}"/>
			</xpath>
			
			
			<xpath expr="//sheet" position="before">
				<div align="center" class="btn-danger" attrs="{'invisible': [('is_discountinued','=',False)]}">
					<h3>
						<p>Discontinued</p>
					</h3>
				</div>
            </xpath>
			
			<xpath expr="//field[@name='categ_id']" position="after">
				<field name="is_discountinued" />
			</xpath>
			
		</field>		
   </record>
   

	
</odoo>


