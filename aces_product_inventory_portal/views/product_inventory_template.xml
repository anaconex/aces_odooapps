<odoo>  
	<!-- show path/name -->    
   <template id="portal_product_inventory" name="Portal layout: inventory menu entry" inherit_id="portal.portal_breadcrumbs" priority="21">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'Products' or product_id" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not product_id else ''}">
                <a t-if="product_id" t-attf-href="/my/products?{{ keep_query() }}">Products</a>
                <t t-else="">Products</t>
            </li>
            <li t-if="product_id" class="breadcrumb-item active text-truncate col-8 col-lg-10">
               <t t-esc="product_id.name"/>
            </li>
        </xpath>
    </template> 

    
    <template id="portal_my_home_product" name="Show Products" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry" >
                <t t-set="title">Products Inventory</t>
                <t t-set="url" t-value="'/my/products'"/>
                <t t-set="placeholder_count" t-value="'product_count'"/>
            </t>
        </xpath>
    </template>
    
    
    <template id="portal_my_products" name="My products">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Products</t>
            </t>
            <t t-if="not grouped_products">
                <div class="alert alert-warning mt8" role="alert">
                    There are no products.
                </div>
            </t>
            
            <t t-if="grouped_products">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_products" t-as="all_products">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Product</th>
                                <th class="text-left">Internal Ref</th>
                                <th class="text-left">Category</th>
                                <th class="text-left">Onhand Quantity</th>
                                <th class="text-left">Forecasted Quantity</th>
                                <th class="text-left">Expected Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="all_products" t-as="_product_">
                             	
                             	<t t-if="_product_.is_discountinued == True">
	                                <tr style="background-color:#FA8072">
	                                	<td>
	                                        <a t-attf-href="/my/product/#{_product_.id}?{{ keep_query() }}"><span t-field="_product_.name"/></a>
	                                    </td>
                                        <td class="text-left">
                                            <span t-esc="_product_.default_code" />
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="_product_.categ_id.name" />
                                        </td>
										<td class="text-left">
	                                        <span t-esc="_product_.qty_available" />
	                                    </td>
	                                    <td class="text-left">
	                                        <span t-esc="_product_.virtual_available" />
	                                    </td>
	                                    <td class="text-left">
	                                        <span t-esc="_product_.expected_date_receving" />
	                                    </td>
	                                </tr>
	                           </t>
	                           
	                           <t t-else="">
	                                <tr>
	                                	<td>
	                                        <a t-attf-href="/my/product/#{_product_.id}?{{ keep_query() }}"><span t-field="_product_.name"/></a>
	                                    </td>
                                        <td class="text-left">
                                            <span t-esc="_product_.default_code" />
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="_product_.categ_id.name" />
                                        </td>
										<td class="text-left">
	                                        <span t-esc="_product_.qty_available" />
	                                    </td>
	                                    <td class="text-left">
	                                        <span t-esc="_product_.virtual_available" />
	                                    </td>
	                                    <td class="text-left">
	                                        <span t-esc="_product_.expected_date_receving" />
	                                    </td>
	                                </tr>
	                              </t>
                           </t>     
                            
                        </tbody>
                    </t>
                </t>
            </t>   
            
        </t>
    </template>

    
    <template id="portal_my_product" name="Product">
        <t t-call="portal.portal_layout">
             <t t-set="o_portal_fullwidth_alert"  >
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=product.product&amp;id=%s&amp;view_type=form' % (product_id.id)"/>
                </t> 
            </t>
            <div id="optional_placeholder"></div>
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                  <div id="optional_placeholder"></div>
                    <div class="container">
                      <div class="card">
                        <div class="card-header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="product_id.name" class="col-7 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="product_id.id"/>)</small>
                                 
                                <div class="col-md-3  text-right">
                                    <small class="text-right">Status:</small>
                                    <t t-if="product_id.is_discountinued == True">
                                    	<span class=" badge badge-pill badge-info">Discontinued</span>
                                    </t>
                                    <t t-if="product_id.is_discountinued == False">
                                    	<span class=" badge badge-pill badge-info">Continued</span>
                                    </t>
                                </div>
                                
                                 <div class="col-md-1  text-right">
                                        <t t-if="pre_id">
                                            <a role="button"  t-attf-href="/product/pre/#{product_id.id}?" ><i style="margin-right:10px; align:right" class="fa fa-chevron-left" role="img" aria-label="Previous" title="Previous"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="margin-right:10px; align:right; color:#B8B7B0" class="fa fa-chevron-left" aria-label="Previous" title="Previous"></i></a>

                                        </t>
                                        <t t-if="next_id">
                                            <a role="button" t-attf-href="/product/next/#{product_id.id}?" ><i class="fa fa-chevron-right" role="img" aria-label="Next" title="Next"></i></a>
                                        </t>
                                        <t t-else="">
                                            <a role="button"  t-att-class="disabled"  ><i style="color:#B8B7B0" class="fa fa-chevron-right" aria-label="Next" title="Next"></i></a>
                                        </t>
                                </div> 
                            </h5>
                   		</div>
            		</div>
   				</div>
			</div>
    	</div>
    </t>
                
               <t t-set="card_body">          
                     
                   	<div class="row">
                    	<div class="col-md-6"> <strong>Onhand Quantity : </strong>
                        	<t t-if="product_id.qty_available">
                            	<span t-esc="product_id.qty_available"/>
                          	</t>
                      	</div>
                  
                       	<div class="col-md-6"> <strong>Forecasted Quantity :</strong>
                           <t t-if="product_id.virtual_available">
                            	<span t-esc="product_id.virtual_available"/>
                          	</t>
                        </div>
                   </div>   
                   <br />
                   
                   <div class="row">
                    	<div class="col-md-6"> <strong>Expected Date : </strong>
                        	<t t-if="product_id.expected_date_receving">
                            	<span t-esc="product_id.expected_date_receving"/>
                          	</t>
                      	</div>
                  
                       	<!-- <div class="col-md-6"> <strong>Forecasted Quantity :</strong>
                           <t t-if="product_id.virtual_available">
                            	<span t-esc="product_id.virtual_available"/>
                          	</t>
                        </div> -->
                   </div>
                       
                   
                   
                   
                   <br/><br/>
                   <div class="row">
						<div class="col">
						<h4>Available Stock</h4>
	                   <table class="table table-condensed">
							<thead>
								<tr>
									<th>SNO</th>
									<!-- <th>Location</th> -->
									<th>Lot</th>
									<th>Quantity</th>
								</tr>
							</thead>
							
							<tbody>
								<t t-set="i" t-value="1" />
								
								<tr t-foreach="product_id.all_lot_ids" t-as='lot_id' >
									<t t-set="qty" t-value="0" />
									
									<t t-foreach="product_id.stock_quant_ids" t-as='line' >
										<t t-if="line.location_id.usage == 'internal'">
											<t t-if="lot_id.id == line.lot_id.id">
												<t t-set="qty" t-value="qty+line.available_quantity" />
											</t>
										</t>
									</t>
									
									<td align="center"><span t-esc="i" /></td>
									<td><span t-esc="lot_id.name" /></td>
									<td><span t-esc="qty" /></td>
									<t t-set="i" t-value="i+1" />
									
								</tr>
								
							</tbody>
						</table>
					</div>
					 
					
					<div class="col">
						<h4>Forecasted Stock</h4>
	                   <table class="table table-condensed">
							<thead>
								<tr>
									<th>SNO</th>
									<th>Expected Date</th>
									<th>Quantity</th>
								</tr>
							</thead>
							
							<tbody>
								<t t-set="i" t-value="1" />
								
								<tr t-foreach="product_id.stock_move_ids" t-as='line' >
									<t t-if="line.origin != False">
										<t t-if="line.state not in ('done','cancel')">
											<td align="center"><span t-esc="i" /></td>
											<td><span t-esc="line.picking_id.scheduled_date" /></td>
											<td><span t-esc="line.product_uom_qty" /></td>
											<t t-set="i" t-value="i+1" />
										</t>
									</t>
								</tr>
							</tbody>
						</table> 
					</div>
				</div>
                 	
                </t> 
            </t>

            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="product_id"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>
    
    
    
</odoo>


