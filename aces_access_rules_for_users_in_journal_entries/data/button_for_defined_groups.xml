<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="reverse_button_for_groups_account_move_inherit" model="ir.ui.view">
        <field name='name'>reverse.button.for.groups.account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                <attribute name="groups">aces_access_rules_for_users_in_journal_entries.group_can_reset_to_draft</attribute>
            </xpath>
        </field>
    </record>

    <record id="reset_button_for_groups_account_move_inherit" model="ir.ui.view">
        <field name='name'>reset.button.for.groups.account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header//button[@name='button_draft']" position="attributes">
                <attribute name="groups">aces_access_rules_for_users_in_journal_entries.group_can_reset_to_draft</attribute>
            </xpath>
        </field>
    </record>

    <record id="edit_button_hide_inherit" model="ir.ui.view">
        <field name="name">edit.button.hide.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="groups_id" eval="[(4, ref('aces_access_rules_for_users_in_journal_entries.group_cannot_edit_journal_entries'))]"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='attributes'>
                <attribute name="edit">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="edit_button_hide_form_inherit" model="ir.ui.view">
        <field name="name">edit.button.hide.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(4, ref('aces_access_rules_for_users_in_journal_entries.group_cannot_edit_journal_entries'))]"/>
        <field name="arch" type="xml">
            <xpath expr='//form' position='attributes'>
                <attribute name="edit">false</attribute>
            </xpath>
        </field>
    </record>

</odoo>
