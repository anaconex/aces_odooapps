<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--CATEGORY-->
    <record id="can_edit_journal_entries" model="ir.module.category">
        <field name="name">Edit Journal Entries</field>
        <field name="description">Category For Employees Regarding Editing Of Journal Entries</field>
        <field name="sequence">30</field>
    </record>

    <!--GROUPS-->
    <record id="group_can_reset_to_draft" model="res.groups">
        <field name="name">Employee Can Reset To Draft And Reverse Entries</field>
        <field name="category_id" ref="can_edit_journal_entries"/>
    </record>

    <record id="group_cannot_edit_journal_entries" model="res.groups">
        <field name="name">Employee Can't Edit Journal Entries</field>
        <field name="category_id" ref="can_edit_journal_entries"/>
    </record>

    <record id="group_cannot_access_print_action" model="res.groups">
        <field name="name">Restrict PRINT and ACTION Access</field>
        <field name="category_id" ref="can_edit_journal_entries"/>
    </record>

</odoo>